<body style="background-color: lightskyblue;">
<div class="page-header">
  <h1>Weather Information</h1>
  <div>
<form role="form" class="form-inline">
 <div class="form-group">
    <label for="city">City</label>
    <input type="text" id="weather_city" name="city" class="form-control" />
  </div>
  <div class="form-group">
    <label for="country">Country</label>
    <input type="text" id="weather_country" name="country" class="form-control" />
  </div>
  <div class="form-group" style= "padding-top: 25px">
 <input class="btn btn-success btn-sm"  type="submit" value="Get Weather" />
  </div>
</form>
</div>
  
</div>
<div class="container">

<br>

<% if !@weather_stat["message"] %>
<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Weather</h3>
  </div>
  <div class="panel-body">
   <%= @weather_stat["weather"][0]["description"] %>  
  </div>
</div>

<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Temperature</h3>
  </div>
  <div class="panel-body">
   <%= @weather_stat["main"]["temp"] %>  
  </div>
</div>

<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Pressure</h3>
  </div>
  <div class="panel-body">
   <%= @weather_stat["main"]["pressure"] %> 
  </div>
</div>

<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Humidity</h3>
  </div>
  <div class="panel-body">
   <%= @weather_stat["main"]["humidity"] %> 
  </div>
</div>

<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Visibility</h3>
  </div>
  <div class="panel-body">
   <%= @weather_stat["visibility"] %> 
  </div>
</div>

<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Sunrise</h3>
  </div>
  <div class="panel-body">
   <%= @weather_stat["sys"]["sunrise"] %> 
  </div>
</div>

<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Sunset</h3>
  </div>
  <div class="panel-body">
   <%= @weather_stat["sys"]["sunset"] %> 
  </div>
</div>
<% else %>
<div> <span> No data is available , <%= @weather_stat["message"] %></span> </div

<% end %>
</div>
</body>


